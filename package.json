{
  "name": "@divmode/eventkit",
  "version": "1.0.7",
  "description": "Type-safe AWS EventBridge toolkit. Generate patterns from Zod schemas, publish events, auto-register schemas, and build event-driven architectures with full TypeScript support.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "bun": "./src/index.ts",
      "types": "./src/index.ts",
      "import": "./dist/index.js"
    },
    "./runtime": {
      "bun": "./src/runtime/index.ts",
      "types": "./src/runtime/index.ts",
      "import": "./dist/runtime/index.js"
    },
    "./registry": {
      "bun": "./src/registry/index.ts",
      "types": "./src/registry/index.ts",
      "import": "./dist/registry/index.js"
    },
    "./sst": {
      "bun": "./src/sst/index.ts",
      "types": "./src/sst/index.ts",
      "import": "./dist/sst/index.js"
    }
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "typescript",
    "events",
    "event-system",
    "zod",
    "validation",
    "discovery",
    "ast",
    "schema-registry",
    "eventbridge",
    "aws",
    "pubsub",
    "messaging",
    "type-safety",
    "build-tools",
    "cli",
    "sst",
    "pulumi",
    "infrastructure"
  ],
  "author": "Divmode",
  "license": "MIT",
  "dependencies": {
    "fast-glob": "^3.3.3",
    "zod": "^4.1.8"
  },
  "peerDependencies": {
    "typescript": ">=4.9.0",
    "@aws-sdk/client-eventbridge": "^3.0.0",
    "sst": ">=3.0.0"
  },
  "peerDependenciesMeta": {
    "@aws-sdk/client-eventbridge": {
      "optional": false
    },
    "sst": {
      "optional": true
    }
  },
  "optionalDependencies": {
    "@aws-sdk/client-schemas": "^3.0.0",
    "@pulumi/aws": "^6.0.0",
    "@pulumi/pulumi": "^3.0.0"
  },
  "devDependencies": {
    "@pulumi/aws": "^6.0.0",
    "@types/aws-lambda": "^8.10.145",
    "@types/bun": "^1.2.22",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DivMode/eventkit"
  },
  "bugs": {
    "url": "https://github.com/DivMode/eventkit/issues"
  },
  "homepage": "https://github.com/DivMode/eventkit#readme",
  "publishConfig": {
    "access": "public"
  }
}
